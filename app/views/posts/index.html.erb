<pre>
 <a><%= link_to 'My Posts', user_path(current_user)%></a>      <a href="/posts">Browse Paintings</a>      <a href="/posts/new">Post a Painting</a>     <a href="/users">Users</a>     <a href="/artists">Artists</a>     <a href="/logout">Logout</a>
      <%= form_tag artists_path, :method => :get do %><p>
            <%= label_tag :search_by_artist_name%>
            <%= text_field_tag :name%>
            <%= submit_tag %>
            <% end %>
  <h1>  Paintings </h1>
  <% if params[:artist_id]%>
  <h4>  <%artist = Artist.find(params[:artist_id]).name%>  </h4>
        by <%= artist%>
        <%= link_to 'Post new art for this artist', new_artist_post_path(params[:artist_id]) %>
  <% end %>
<% @posts.each do |post| %>
    
    <% if params[:artist_id] %>
    Title: <%=  link_to post.title,  artist_post_path(params[:artist_id], post.id)%>
      <% else %>
    Title: <%= link_to post.title, post_path(post)%>
    Artist: <%= link_to post.artist.name, artist_path(post.artist)%>
    <% end %>
    Posted by: <%= link_to post.user.full_name, user_path(post.user)%>
    <%= post.likes.count %> <%= (post.likes.count) == 1 ? 'Like' : 'Likes'%>
    <div style="width:200px; height:auto; margin-left:auto; margin-right:auto">
    <%= image_tag(post.image, style: 'width:100%')%>
    </div>
    
    <% end %>
    </pre>

