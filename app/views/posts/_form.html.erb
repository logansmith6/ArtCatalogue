<pre>
 <%= form_for @post, url: '/posts' do |form|%>
   <div class="field">
     <%= form.label :title%>
     <%= form.text_field :title, class: "form-control"%>
   </div>
   <% if params[:artist_id]%>
      by <%= Artist.find(params[:artist_id]).name%>
      <% @post.artist_id = Artist.find(params[:artist_id]).name%>
    <% else %>
   <%= form.fields_for :artist, Artist.find_or_create_by(params[:artist_attributes]) do |artist|%>
   
      <%= artist.label :artist_name %>
      <%= artist.text_field :name, class: "form-control"%>
      
     <% end %>
     <% end%>
  
   <div class="field">
     <%= form.label :image%>  
     <%= form.file_field :image%>
   </div>
    <div class="actions">
     <%= form.submit class: "btn btn-primary"%>
   </div>
   <% end %>
   </div>
   </pre>
   

   